{{define "title"}}DFG list (Drafting){{end}}
{{define "head"}}{{end}}
{{define "content"}}
	<p><h2>Render DFGs, members and details from corporate LDAP</h2></p>

	{{range $dfg := index $.dfgs}}
	<table class="table table-striped table-bordered">
		<thead>
			<tr>
				<th colspan="6">{{$dfg}}</th>
			</tr>
			<tr>
				<th>Name</th>
				<th>Role</th>
				<th>eMail</th>
				<th>Mobile</th>
				<th>Location</th>
				<th>Title</th>
			</tr>
		</thead>
		<tbody>
		{{range $foo := index $.people}}
			{{range $foo.Dfg}}
				{{if eq . $dfg}}
			<tr>
				<td>{{$foo.Cn}}</td>
				<td>{{$foo.Role}}</td>
				<td>{{$foo.Mail}}</td>
				<td>{{$foo.Mobile}}</td>
				<td>{{$foo.Location}}</td>
				<td>{{$foo.Title}}</td>
			</tr>
				{{end}}
			{{end}}
		{{end}}
		</tbody>
	</table>
	{{end}}

	{{template "footer" .}}
{{end}}
{{define "foot"}}{{end}}
